{
  "name": "mern-stack",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "http://github.com/gdmgent-1920-mobdev2/MERN-stack",
  "author": "drdynscript <drdynscript@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^5.1.0",
    "cpy-cli": "^3.1.0",
    "cross-env": "^7.0.2",
    "rimraf": "^3.0.2"
  },
  "scripts": {
    "build:all": "rimraf ./dist/* && yarn build:react-client && yarn build:server && yarn cpy:settings",
    "build:react-client": "cd react-client && yarn build && cpy \"**/*.*\" --cwd=build ../../dist/client --parents",
    "build:server": "cd server && yarn build && cpy \"**/*.*\" --cwd=dist ../../dist --parents",
    "dep:install": "cd server && yarn install && cd ../react-client && yarn install",    
    "serve:build": "cd dist && node index.js",
    "watch:all": "concurrently \"cd server && yarn watch:serve\" \"cd react-client && yarn start\"",
    "watch": "cd server && yarn watch:serve",
    "cpy:settings": "cpy \"**/*.*\" --cwd=settings ../dist"
  }
}
