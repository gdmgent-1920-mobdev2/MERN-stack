{
  "name": "MERN-stack",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "http://github.com/gdmgent-1920-mobdev2/MERN-stack",
  "author": "drdynscript <drdynscript@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^5.1.0",
    "cpy-cli": "^3.1.0",
    "cross-env": "^7.0.2",
    "rimraf": "^3.0.2"
  },
  "scripts": {
    "build:all:ghactions": "yarn build:react-client:ghactions && yarn build:server:ghactions",
    "build:react-client:ghactions": "cd react-client && yarn build",
    "build:server:ghactions": "cd server && yarn build",
    "build:all:local": "rimraf ./dist/* && yarn build:react-client:local && yarn build:server:local && yarn cpy:settings:local",
    "build:react-client:local": "cd react-client && yarn build && cpy **/*.* --cwd=build ../../dist/client --parents",
    "build:server:local": "cd server && yarn build && cpy **/*.* --cwd=dist ../../dist --parents",
    "install": "cd server && yarn install && cd ../react-client && yarn install",    
    "serve:build": "cd dist && node index.js",
    "watch:all": "concurrently \"cd server && yarn watch:serve\" \"cd react-client && yarn start\"",
    "watch": "cd server && yarn watch:serve",
    "cpy:settings:local": "cpy **/*.* --cwd=settings ../dist"
  }
}
